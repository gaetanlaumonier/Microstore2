{% extends 'layout.html.twig' %}
{% block navBar %}
	{% include 'defaultNav.html.twig' %}
{% endblock %}
{% block pageTitle %}Page de profil{% endblock %}

{% block pageContent %}
<div class="row">
	<div class="jumbotron">
		<div class="text-center">
			<h3><u>Vos informations personnelles</u> :</h3>
			<div><u>Nom d'utilisateur</u> : {{ app.user.username }}</div>
			<div><u>Adresse mail</u> : {{ app.user.mail }}</div>
			<div><u>Ville</u> : {{ app.user.ville }}</div>
			<div><u>Adresse</u> : {{ app.user.adresse }}</div>
			<div><u>Téléphone</u> : {{ app.user.telephone }}</div>
			{% if is_granted('ROLE_ADMIN') %}
			<div><u>Rang</u> : {{ app.user.role }}</div>
			{% endif %}
		</div>
	</div>
</div>		
<div class="row">
	<div class="col-lg-4 col-md-6">
		<div class="panel panel-primary">
