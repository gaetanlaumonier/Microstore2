{% extends 'layout.html.twig' %}
{% block navBar %}
    {% include 'defaultNav.html.twig' %}
{% endblock %}
{% block pageTitle %} Récapitulatif de votre commande {% endblock %}

{% block pageContent %}
    {% if ArrayCommande is defined  %}
                    <div class="col-lg-12 col-md-12">
                        <div class="panel panel-brown">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-2">
                                        <div class="huge"><span class="glyphicon glyphicon-apple"></span></div>
                                    </div>
                                        <div class="col-xs-6 text-left">Commande n° {{ idCommande }} : </div>
                                        <div class="text-right">Etat de la commande : {{ etatCommande }} &nbsp;&nbsp;&nbsp;</div>
                                    <br/><br/>
                                        {% for produitCommande in ArrayCommande %}
                                               <div>Nom du produit :{{ produitCommande.objet.getNomProduit() }}</div>

                                        <div>Prix de l'article :{{ produitCommande.objet.getPrixKiloProduit() }} €/K</div>
                                        <div> Quantite :{{ produitCommande.quantite }}</div>
                                            <div> Prix du produit :{{ produitCommande.prixProduit }}</div>

                                            <div> Adresse de livraison :{{ produitCommande.adresseUser }}</div>
                                            <div> Adresse de livraison :{{ produitCommande.villeUser }}</div>
                                            <div> Adresse de livraison :{{ produitCommande.telUser }}</div>
                                            <div> Adresse de livraison :{{ produitCommande.mailUser }}</div>

                                            <br/><br/>

                                        {% endfor %}
                                        <div>Total : {{ total }}€</div>
                                        <button type="submit" class="btn btn-warning  btn-primary pull-right"><span class="glyphicon glyphicon-log-in"></span> Détails </button>
                                    </div>
                                </div>
                            </div>
                        </div>
    {% else %}

    <h1>Erreur !</h1>

    {% endif %}

{% endblock %}
